<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Reset Password</h1>

      <%= form_with url: password_reset_path, class: "shadow p-4 bg-white rounded" do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Reset Password", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <p><%= link_to "Log In", new_session_path %></p>
        <p>Don't have an account? <%= link_to "Sign Up", new_registration_path %></p>
      </div>
    </div>
  </div>
</div>