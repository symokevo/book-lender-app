<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Sign Up</h1>

      <%= form_with model: @user, url: registration_path, class: "shadow p-4 bg-white rounded" do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <%= @user.errors.full_messages.to_sentence %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <p>Already have an account? <%= link_to "Log In", "#" %></p>
        <p><%= link_to "Forgot your password?", "#" %></p>
      </div>
    </div>
  </div>
</div>